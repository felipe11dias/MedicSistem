<p id="notice"><%= notice %></p>

<h1 class="ui green header">Surgeries</h1>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Date hours</th>
      <th>Doctors</th>
      <th>Rooms</th>
      <th>Clients</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surgeries.each do |surgery| %>
      <tr>
        <td><%= surgery.date_hours %></td>
        <td><%= surgery.doctor.full_name %></td>
        <td><%= surgery.room.floor %></td>
        <td><%= surgery.client.full_name %></td>
        <td><%= link_to 'Show', surgery %></td>
        <td><%= link_to 'Edit', edit_surgery_path(surgery.id) %></td>
        <td><%= link_to 'Destroy', surgery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
