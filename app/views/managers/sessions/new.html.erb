
<div class="ui middle aligned center aligned grid" style="margin-top: ">
  <div class="column" style="max-width: 450px;">
    <h2 class="ui teal image header">
      <div class="content">
         Log-in Manager
       </div>
    </h2>

    <div class="ui large form">
     <div class="ui stacked segment">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
    <div class="ui left icon input">
      <i class="user icon"></i>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail address" %>
      </div>
    </div>

      <div class="field">
        <div class="ui left icon input">
            <i class="lock icon"></i>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="ui checkbox">
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        </div>
      <% end -%>

      <div class="actions">
        <button class="ui fluid large teal submit button" type="submit">Login </button>
      </div>
      </div>
    <% end %>
    <div class="ui message">
      <%= render "doctors/shared/links" %></br>
      <%= link_to 'Doctor log in', new_doctor_session_path%>
    </div>
    </div>
  </div>
</div>






